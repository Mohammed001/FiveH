<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_in_my_points"
        tools:context=".MyPoints">

        <Space
            android:layout_width="@dimen/space_in_my_points"
            android:layout_height="@dimen/space_in_my_points" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/convert_from_points_to_cache"
                android:gravity="bottom|center_horizontal"
                android:paddingTop="20dp"
                android:text="@string/convert_your_points_to_money_label" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circular_gradient"
                    android:gravity="center"
                    android:text="@string/_2500_points"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/debug_participation_type_free" />

            </LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/charity"
                android:gravity="bottom|center_horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                android:text="@string/donate_to_charities" />

        </LinearLayout>

        <Space
            android:layout_width="@dimen/space_in_my_points"
            android:layout_height="@dimen/space_in_my_points" />

        <!-- Signup Button -->
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/increase_your_balance_btn" />

        <Space
            android:layout_width="@dimen/space_in_my_points"
            android:layout_height="@dimen/space_in_my_points" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/explain_increase_your_points" />


        <Space
            android:layout_width="@dimen/space_in_my_points"
            android:layout_height="@dimen/space_in_my_points" />

        <!-- Signup Button -->
        <Button
            style="@style/my_points_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/boarder_rounded_corner2"
            android:gravity="center"
            android:text="@string/save" />

        <Space
            android:layout_width="@dimen/space_in_my_points"
            android:layout_height="@dimen/space_in_my_points" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:text="@string/participation_type" />

        <Space
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:text="@string/choose_participation_type" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
