<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_p"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <!--this attr is used instead of layout_gravity=center in linearlayout which make the upper views hidden-->
    <!--android:fillViewport="true"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_t" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_next_arabic_light_p30doenload_com"
            android:gravity="center"
            android:minLines="3"
            android:text="@string/explain_service"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_go_to_creat_account"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/din_next_arabic_light_p30doenload_com"
            android:gravity="center"
            android:text="@string/create_account_btn"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_space" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_go_to_login"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/din_next_arabic_light_p30doenload_com"
            android:gravity="center"
            android:text="@string/action_sign_in_short"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>